{game_entity
	(include "/properties/car.ext")
	(include "/properties/shadow/tank.inc" scale(0.9))
	(include "/properties/selection/vehicle.inc" scale(0.8))
	{props "moto" "vision_lev01" "muzzle_75mm_76mm"}
	{able "emit_on_attack"}
	{able "emit_on_attack"}
	{PatherId "kubel"}
	{targetSelector "tank_light"}

	("wheel" args "wheelright1")
	("wheel" args "wheelleft1")
	("wheel" args "wheelright2")
	("wheel" args "wheelleft2")

	("fuel" args "fuel")
	("ammo" args "ammo")
	("transmission" args "transmission")
	{volume "engine" {thickness 10}}
	{volume "engine" {thickness 10}}
	{volume "turret" {thickness 10}{component "turret"}}
	
	(include "crew.ext")
	
	{sensor
		{visor "commander"
			{vision "human"}
			{bone "visor1"}
		}
		{visor "driver"
			{vision "human"}
			{bone "visor"}
		}
		{visor "gunner"
			{vision "human"}
			{bone "visor2"}
		}
	}
	
	{extender "inventory"
		{box
			{item "ammo bullet106_m40 heat" 8}
			{item "ammo bullet106_m40 he" 4}
		}
	}

	{Weaponry
		{place "gun"
			{weapon			"106mm_m40" filling "ammo bullet106_m40 heat" 1}
			{gunner "gunner"}
			{charger "commander"}
			{foresight "foresight1"}
			{RestoreIKAfterAim}
			{Rotate}
			("abm_dymamic"
				zeroing(5.0)
				dispersion(0.40)
			)
		}
	}  
	
	{Chassis
		("car_trace" fx("tracewheel03") step(0.08) wheell("wlf") wheelr("wrf") bonel("FXtraceL1") boner("FXtraceR1"))
		("car_trace" fx("tracewheel03") step(0.08) wheell("wlr") wheelr("wrr") bonel("FXtraceL2") boner("FXtraceR2"))
		("mobility_car"
			speed(80) ;----------------------------------Max speed.
			speedatmaxturn(12) ;-------------------------Max speed at max turn.
			reverse(18) ;--------------------------------Max speed in Reverse.
			weight(1.32) ;-------------------------------Weight in Tonnes.
			power(54) ;----------------------------------Horse Power.
			fuel(60) ;-----------------------------------Fuel capacity in Litres.
			type(fuel) ;---------------------------------Fuel type.
			range(170) ;---------------------------------Range in Kilometers.
		)
	}

	{Volume "Body"
		{tags "body"}
		{component "body"}
		{thickness 4}
	}
	
	{Extension "m151_m40.mdl"}

	{bone "gun_rot"
		{limits 5 -15}
		{speed2 16}
	}
	{bone "turret"
		{limits -120 120}
		{speed2 16}
	}
}
