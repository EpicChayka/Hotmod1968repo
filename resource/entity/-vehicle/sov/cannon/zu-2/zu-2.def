{game_entity
	(include "/properties/cannon.ext")	
	{Extension "zu-2.mdl"}
	(include "/properties/selection/cannon.inc" scale(0.7))

	(include "crew.ext")
	
	{targetclass "cannon" "zenite bullet"}
	{PatherID "cannon.large"}
	
	{props "wheeled" "flak" "vision_cannon_medium" "muzzle_zenite"}
	{lodclass "vehicle_small"}

	("armor_heavy" args 1.1)

	;volume, component/tag, thickness
	("volume_simple" args "body" "body" 10)
	("volume_simple" args "turret" "body" 10)
	("volume_simple" args "turret2" "body" 10)
	("volume_simple" args "turret3" "body" 10)
	("volume_simple" args "gun" "body" 10)

	("wheel" args "wheelright")
	("wheel" args "wheelleft")

	(include "cannon_crew.ext")
	("crew_wheeled_gun")

	{boarder
		{anm "gunner"
			{forward	{end "pose_61K_gunlayer_right" 10}}
		}
		{anm "commander"
			{forward	{end "pose_61K_gunlayer_left" 10}}
		}
		{anm "driver1"
			{forward {end "cannon_pak40_pusher_left" 10}}
		}
		{anm "driver2"
			{forward {end "cannon_pak40_pusher_right" 10}}
		}
		{anm "seat1"
			{forward {end "pose_seat_cannon_left" 10}}
		}
		{anm "seat2"
			{forward {end "pose_seat_cannon_right" 10}}
		}
	}

{sensor
	{visor "gunner"
		{vision "tank_main-l"}
		{bone "visor"}
	}
	{visor "commander"
		{vision "human"}
		{bone "visor2"}
	}
}

	{extender "inventory"
		{Box
			{item "ammo 14x114" 500}
		}
	}
	
	{Weaponry
		{place "gun"
			{RestoreIKAfterAim}
			{weapon 	"kpvt_x2" filled}
			{foresight 	"foresight3"}
			{Barrels 	2}
			("abm_low")
		}
	}

	{extender "cannon"
		{animation
			{aim		"Cannon_61K_gunlayer_right"	"Cannon_61K_gunlayer_left"}
			;{fire		"" 							""}
			{move		"cannon_pak40_pusher_left" 	"cannon_pak40_pusher_right"}
			;{reload	"" 							"cannon_flak38_charger_left"}
			{switch "close"}
		}
		{move {obstacle "close"}}
		{attack {obstacle "open"}}
	}

	{mass 7800}
	{Chassis "track"
		("car_trace" fx("tracewheel02") step(0.1) wheell("wlf") wheelr("wrf") bonel("FXtraceL1") boner("FXtraceR1"))
		("loco_medium")
	}

	{bone "turret"
		{speed 0.010}
	}
}