{game_entity		;ZIL-157
	(include "/properties/car.ext")
	(include "/properties/shadow/tank.inc" scale(1.0))
	(include "/properties/selection/vehicle.inc" scale(1.1))
	{props "multi_board" "truck" "vision_lev02" "tractor" "tractor_medium"}
	{able "emit_on_attack"}
	{collider "truck"}
	{patherId "gazaaa"}
	
	
	("crew_2_human")
	("passenger_10_human")

	("shield_cover" args "shield1" 1)
	
	("fuel" args "fuel1")
	("fuel" args "fuel2")
	("transmission" args "transmission")
	
	{Volume "Body1"
		{tags "body"}
		{component "body"}
		{thickness 3}
	}
	{Volume "Body2"
		{tags "body"}
		{component "body"}
		{thickness 3}
	}
	{Volume "bodyback"
		{thickness 3}
		{material "wood"}
		{tags "wood"}
	}
  
	{extender "shield"
			{on}
	}
	
	("board_animation"
		place(driver)
		board_begin(board_big-midcar_driver)
		board_end(seat_driver_car)
		base(doorleft)
	)
	("board_animation"
		place(commander)
		board_begin(board_big-midcar)
		board_end(seat_passenger)
		base(doorright)
	)

	{boarder
		{anm "passenger"
			{forward {begin "board_body"} {end "seat_passenger"} {base "board"}}
			{reverse {end "emit_body" 1} {base "board"}}
		}
	}

  ("wheel" args "wheelright1")
  ("wheel" args "wheelleft1")
  ("wheel" args "wheelright2")
  ("wheel" args "wheelleft2")
  ("wheel" args "wheelright3")
  ("wheel" args "wheelleft3")
  
	("glass" args "glass" 1)
	("glass" args "glass2" 1)
	("glass" args "glass3" 1)
	
  {mass 7800}
  
	{Chassis
		("car_trace" fx("tracewheel03") step(0.08) wheell("wlf") wheelr("wrf") bonel("FXtraceL1") boner("FXtraceR1"))
		("car_trace" fx("tracewheel03d") step(0.08) wheell("wlr") wheelr("wrr") bonel("FXtraceL2") boner("FXtraceR2"))
		("mobility_car"
			speed(60) ;----------------------------------Max speed.
			speedatmaxturn(17) ;-------------------------Max speed at max turn.
			reverse(22) ;--------------------------------Max speed in Reverse.
			weight(7.8) ;------------------------------Weight in Tonnes.
			power(104) ;----------------------------------Horse Power.
			fuel(215) ;----------------------------------Fuel capacity in Litres.
			type(fuel) ;---------------------------------Fuel type.
			range(405) ;---------------------------------Range in Kilometers.
		)
	}
	
	{Extension "zil157.mdl"}

	{extender "inventory"
		{box
		}
	}
}
