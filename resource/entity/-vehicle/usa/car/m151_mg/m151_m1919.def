{game_entity
	(include "/properties/car.ext")
	(include "/properties/shadow/tank.inc" scale(0.9))
	(include "/properties/selection/vehicle.inc" scale(0.8))
	{props "moto" "vision_lev01" "tractor" "tractor_light"}
	{able "emit_on_attack"}
	{able "emit_on_attack"}
	{PatherId "kubel"}
	{targetSelector "car_bullet"}

	
	("wheel" args "wheelright1")
	("wheel" args "wheelleft1")
	("wheel" args "wheelright2")
	("wheel" args "wheelleft2")
	
	("fuel" args "fuel")
	("transmission" args "transmission")
	{volume "engine" {thickness 10}}

	(include "crew.ext")
	
	{sensor
		{visor "commander"
			{vision "human"}
			{bone "visor1"}
		}
		{visor "driver"
			{vision "human"}
			{bone "visor"}
		}
		{visor "gunner"
			{vision "human"}
			{bone "visor2"}
		}
	}

	{extender "inventory"
		{weapon "mgun2" {mask "mountable"}}
		{box
			{item "ammo mgun_usa belt" 1000}
			{item "ammo m60_box" 1000}
			{item "m60" filled {user "mgun2"}}
		}
	}

	{Weaponry
		{place "mgun"
			{weapon "browning_m19a4" filled}
			{LinkAnimation	"off"}
			{gunner "gunner"}
			{charger "gunner"}
			;{foresight "foresight3"}
			{LinkBone		"gun"}
			{LinkAnimation	"off"}
			("abm_mgun")
		}
		{place "mgun2"
			{LinkBone "mgun2"}
			{gunner "commander"}
			{charger "commander"}
			{LinkBone		"mgun"}
			{LinkAnimation	"off"}
			{basic}
			{ai_in_manual}
		}
	}  

	{Chassis
		("car_trace" fx("tracewheel03") step(0.08) wheell("wlf") wheelr("wrf") bonel("FXtraceL1") boner("FXtraceR1"))
		("car_trace" fx("tracewheel03") step(0.08) wheell("wlr") wheelr("wrr") bonel("FXtraceL2") boner("FXtraceR2"))
		("mobility_car"
			speed(80) ;----------------------------------Max speed.
			speedatmaxturn(12) ;-------------------------Max speed at max turn.
			reverse(18) ;--------------------------------Max speed in Reverse.
			weight(1.32) ;-------------------------------Weight in Tonnes.
			power(54) ;----------------------------------Horse Power.
			fuel(60) ;-----------------------------------Fuel capacity in Litres.
			type(fuel) ;---------------------------------Fuel type.
			range(170) ;---------------------------------Range in Kilometers.
		)
	}

	{Extension "m151_mg.mdl"}

	{bone "gun_rot"
		{limits -25 10}
	}
	{bone "turret"
		{limits -55 55}
		{speed2 62}
	}
	{bone "mgun_rot"
		{limits -25 20}
	}
	{bone "mgun_turret"
        {limits -40 20}
		{speed2 80}
	}
}
