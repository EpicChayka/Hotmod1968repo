		{link "emit5" "seat13" {anm "passenger_extra"} {forward putoff} {reverse puton}}
		{link "emit5" "seat14" {anm "passenger_extra"} {forward putoff} {reverse puton}}
	}

	;volume, component/tag, thickness
	{volume "body6"}
	
	{Obstacle "in_air"
		{Obb2
			{Center -20 0}
			{Extent 200 160}
			{Axis -1 0}
		}
		{rotate}
	}
	{ObstacleId "helicopter" "in_air"}

