	{mass 5100}
	{Chassis "helicopter"
		{FuelBag
			{volume 960}		;liters
			{remain 960}
		}
	}

	;main rotor + blades
	("part" args "rotor")
	("part" args "propeller1")
	("part" args "propeller2")
	("part" args "propeller3")
	("part" args "propeller4")

	;back rotor + blades
	("part" args "rotor_b")
	("part" args "propeller_b")
	("part" args "propeller_b1")
	("part" args "propeller_b2")

	("wheel" args "wheell1")
	("wheel" args "wheelr1")
	("wheel" args "wheell2")
	("wheel" args "wheelr2")

	{Extension "mil_mi4.mdl"}
	
	{bone "mgun_rot_h"		;mgun: right/left
		{speed 0.025}
		{limits -45 45}
	}
	{bone "mgun_rot_v"			;mgun: up/down
		{speed 0.025}
		{limits -15 45}
	}
	{bone "gun_rot_h"			;rockets: right/left
		{speed 0.01}
		{limits -10 10}
	}
	{bone "gun_rot_v"			;rockets: up/down
		{speed 0.01}
		{limits -15 15}
	}
