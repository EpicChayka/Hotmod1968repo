{entity
	(include "/properties/tank.ext")
	(include "/properties/shadow/tank.inc" scale(1.0))
	(include "/properties/selection/vehicle.inc" scale(1.2))
	{collider "tank.light"}
	{props "light" "turret_rotator" "vision_lev04" "amphibia" "muzzle_75mm_76mm" "diesel"}
	{targetclass "tank_light"}
	{targetSelector "tank_light"}
	{patherId "t37"}

	(include "pt-76a.ext")
	
	{extender "enumerator"
		{digit_folder "cw"}
	}
	
	("crew_3_human")
	
	{boarder
		{anm "driver"
			{forward	{begin	"board_pz4_driver"} {end "seat_sd222_gunner2"} {base "open_driver"}}
			{reverse 	{end	"board_pz4_driver" -1} {base "open_driver" -1}}
		}
		{anm "left"
			{forward	{begin	"board_tank_left"} {end "seat_gunner_stand"}}
			{reverse 	{end	"emit_tank_2_hold"}}
		}
		{anm "right"
			{forward	{begin	"board_tank_right"} {end "seat_gunner_stand"}}
			{reverse 	{end	"emit_tank_2_hold"}}
		}
	}

	{extender "inventory"
		{box
			{item "bullet76_d56 he" 28}
			{item "bullet76_d56 apcr" 13}		;41 rounds
			{item "ammo mgun_rus belt" 1000}
			{item "satchel_charge_rus" 1}
		}
	}
	
	{Weaponry
		("restore_ik_time")
		{place "gun"
			{RestoreIKAfterAim}
			{weapon "76mm_d56t" filling "bullet76_d56 he" 1}
			{gunner "gunner"}
			{charger "charger"}
			("abm_dymamic_stabilised"
				zeroing(3.0)
				dispersion(0.40)
			)
		}
		{place "mgun1"
			{type "coaxial"}
			{weapon "sgmt" filled}
			{foresight "foresight5"}
			{gunner "gunner"}
			{charger "gunner"}
			("abm_mgun")
			{basic}
		}
        {place "mgun2"
			{weapon "binocular" filled}
             {foresight "foresight4"}
            {gunner "commander"}
		}
	}

	
	{mass 12600}

	{Chassis
		("tank_trace" fx("tracks_mid") step(0.52) len(0.7))
		("mobility_tank"
			speed(44) ;----------Max speed when fully accelerated on road, km/h.
			reverse(8.9);---------Max speed in reverse on road, km/h. ;//6.9 historical + 2 due to terrain modifier
			traverse(36) ;-------Track traverse, per second, in degrees.
			weight(14.6) ;-------Weight in Tonnes.
			power(240) ;---------Engine Power, in hp.
			track(3.5) ;---------Track performance: (0,10], 10=ideal. Sluggish tanks and vehicles with narrow and non-gripping tracks have a lower performance.
			fuel(250) ;----------Fuel capacity in Litres.
			type(diesel) ;-------Fuel type. (diesel OR fuel)
			range(480) ;---------Range in km, off-road.
		)
		{switch
			{exitFromWater}
			{terrain not "water" "deep_water"}
		}
	}
	{chassis "water"
		("chassis_defaults")
		{ignorePatherBounds}
		{waterline 1.0}
		{switch
			{terrain "water" "deep_water"}
		}
	}

	{Extension "pt-76a.mdl"}
}
